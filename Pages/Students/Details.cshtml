@page
@model StudentInformation.Pages.Students.DetailsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentInformation.styles.css" asp-append-version="true" />
</head>
<body>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Module)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Module)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Grade)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
